# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/hustle_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=hustle_db
DATABASE_USER=username
DATABASE_PASSWORD=password

# Web 服务器配置
WEBSERVER_HOST=0.0.0.0
WEBSERVER_PORT=8000
WEBSERVER_DEBUG=True

# Flask 密钥配置
FLASK_SECRET_KEY=vnpy-mt5-gateway-secret-key

# MT5 网关配置
MT5_GATEWAY_NAME=MT5
MT5_PATH=C:\\Program Files\\MetaTrader 5\\terminal64.exe
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=Bybit-Live-2
MT5_TIMEOUT=60
MT5_SYMBOLS=XAUUSD.s

# Binance 配置
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_BASE_URL=https://fapi.binance.com
BINANCE_SYMBOL=XAUUSDT
BINANCE_CONTRACT_TYPE=PERPETUAL

# 代理配置（如果需要访问国外API）
BINANCE_HTTP_PROXY=
BINANCE_HTTPS_PROXY=

# 数据更新配置
DATA_UPDATE_INTERVAL=1
DATA_MAX_DELAY_SECONDS=3

# 备份配置
BACKUP_FREQUENCY=daily
BACKUP_TIME=02:00
BACKUP_BRANCH=master
BACKUP_AUTO_PUSH=True
BACKUP_SEND_NOTIFICATION=True

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=app.log

# 其他配置
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=10

# 设置文件路径
SETTINGS_FILE=arbitrage_settings.json
